<div class="iphone-xs" style="background-image: linear-gradient(rgba(4,123,183,0.3),rgba(4,123,183,1)), url('<%= cl_image_path("AperoBlindTest/new-background_rxlqab", :fetch_format=>:auto, :crop => :scale) %>')">

  <%= render 'shared/navbar_abt' %>

  <div id="waiting-for-next-song" data-player-id="<%= @game.answers.last.player.id %>" data-game-id="<%= @game.id %>"></div>
  <% @sorted = @game.players.sort_by { |obj| obj.score}.reverse %>
  <% @top3 = @game.players.sort_by { |obj| obj.score}.reverse.first(3) %>

  <div id="display-song-player" style="color: white;">
    <h1 style="background-color: white; color: #047BB7"><strong>üëè GOOD JOB <%= @game.answers.last.player.user_name %> !</strong></h1>
    <h2 style="color:white;">Top 3</h2>
    <div class="cartouche" style="color:white;">
      <div>
        <% @top3.each_with_index do |player, index| %>
          <div class="cartouche-song">
              <h3 style="color:white;"><strong><%= index + 1 %>. <%= player.user_name %> :</strong> <%= player.score %> POINTS </h3>
          </div>
        <% end %>
      </div>
    </div>
    <h1 style="background-color: white; color: #047BB7"><strong>üêê WTF <%= @sorted.last.user_name %>... SUCH A LOOSER</strong></h1>
    <h4>NEXT SONG IN...</h4>
  </div>

  <div class="display-gif-timer">
    <div id="timer-next-song"></div>
  </div>
</div>

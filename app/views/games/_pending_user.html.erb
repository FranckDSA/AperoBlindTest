<%= render 'shared/navbar_abt_user' %>

<!-- Id game & data-game-id importants -->
<div class="container home-center">
    <h2 class="p-3">Hello <%= @game.user.user_name %></h2>
    <p>
      <!-- Avatar du game master -->
      <img src="<%= @game.user.avatar %>" class="avatar-large" alt="">
    </p>

    <div class="box-pin">
      <p> Invite your friends to play with this game pin is : </p>
      <h2 id="blue-game-pin"><%= @game.game_pin %></h2>
    </div>

    <div class="waiting-room">
      <p class="py-3"> Wait for your friends to launch the game </p>
      <p>
        <% @game.players.each do |player| %>
        <li><%= player.user_name %> is ready to play</li>
        <% end %>
      </p>
    </div>

    <%= simple_form_for @game, method: "PATCH" do |f|%>
    <%= f.hidden_field :state, value:"playing", type:"hidden" %>
    <%= f.submit "Launch the game", class:"btn btn-primary blue-background"%>
    <% end %>
</div>

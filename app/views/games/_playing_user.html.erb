<%= render 'shared/navbar_abt_user' %>

<div class="top" style="text-align:center;">

  <div class="current-playlist-image">
    <img src="<%=@game.playlist.image%>" alt="">
  </div>

  <div class="current-track">
    <h3><strong>ğŸ¶ CURRENT TRACK ğŸ¶</strong></h3>
    <div class="current-track-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=@game.current_track.image%>');">
    </div>
    <div class="current-track-info">
      <div class="current-track-description">
        <p> Title: <strong><%=@game.current_track.title%></strong></h3>
        <p> Artist: <strong><%=@game.current_track.artist%></strong></h3>
      </div>
    </div>
  </div>

  <%= render 'shared/control-game-master' %>

  <div class="container">
    <div class="score-recap">
      <h3 style="text-align: center"><strong>ğŸ† SCORE RECAP ğŸ†<strong></h3>
      <p>
        <% @game.players.each do |player| %>
        <li><%= player.user_name %> : <%= player.score %></li>
        <% end %>
      </p>
    </div>
  </div>
</div>



<div class="iphone-xs" style="background-color: #1E2023">

  <%= render 'shared/navbar_abt' %>

  <div id="display-song-player" class="playing">

    <span>
      <h1>
        <% @sorted = @game.players.sort_by { |obj| obj.score}.reverse %>
        <% @top1 = @game.players.sort_by { |obj| obj.score}.reverse.first(1) %>
        <% @top3 = @game.players.sort_by { |obj| obj.score}.reverse.first(3) %>
        <% @top5 = @game.players.sort_by { |obj| obj.score}.reverse.first(5) %>
        <% if @top1.include?(@current_player) %>
          YOU'RE THE BEST!
        <% elsif @top3.include?(@current_player) %>
          WELL DONE!
        <% else @top5.include?(@current_player) %>
          KEEP GOING!
        <% end %>
      </h1>
    </span>

    <div>
      <h2>
        <% if @current_player %>
        Your rank: <%= @sorted.index(@current_player) + 1%> / <%= @game.players.size %>
        <% end %>
      </h2>
    </div>

    <span><h2>Top 3</h2></span>

    <div class="cartouche">
      <div>
          <% @top3.each do |player| %>
            <div class="cartouche-song">
              <h3><%= player.user_name %>:</h3><p><%= player.score %> POINTS </p>
            </div>
          <% end %>
      </div>
    </div>

    <h4>BUZZ TO GUESS!</h4>

  </div>

  <div class="display-gif">
    <%= link_to game_answers_path(@game), method: :post do %>
      <%= cl_image_tag "AperoBlindTest/sound-1_luzly8.gif", crop: :fill, class:"gif-buzzer"%>
    <% end %>
  </div>


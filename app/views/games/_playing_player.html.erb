<div class="iphone-xs" style="background-color: #1E2023">

  <%= render 'shared/navbar_abt' %>

  <div id="modal-scores" class="hidden">
    <div class="container">
      <span class="close">&times;</span>
      <div class="score-recap">
        <h3 style="text-align: center"><strong>🏆 SCORE RECAP 🏆<strong></h3>
        <h4>
          <% @sorted = @game.players.sort_by { |obj| obj.score}.reverse %>
          <% @sorted.each do |player| %>
          <li><%= player.user_name %> : <%= player.score %></li>
          <% end %>
        </h4>
      </div>
    </div>
  </div>

  <div class="playing" style="color:white">
    <div class="scores">
      <p>
        <span class="material-icons"> military_tech </span> Winner score : <%= @game.max_score %> points
      </p>
      <p> Your score : </p>
      <% if @current_player %>
      <h2><%= @current_player.score %> points</h2>
      <% end %>
    </div>

    <div class="img-buzzer">
      <%= cl_image_tag "AperoBlindTest/sound_dmzsmq.gif", width: 200, height: 300, crop: :fill%>
    </div>

    <div class="buzz-group">
      <%= simple_form_for [ @game, @answer ], defaults: {label: false} do |f| %>

      <%= f.submit "BUZZ NOW !", class:"btn-buzzer" %>
      <% end %>
    </div>
  </div>



  <button id="click-modal"><i class="fas fa-star"></i></button>

</div>



<% if @game.state == "playing"%>
  <%= render 'games/playing_player' %>
<% elsif @game.state == "resuming"%>
  <%= render 'games/playing_player' %>
<% elsif @game.state == "buzz" %>
  <%= render 'games/buzz_player' %>
<% elsif @game.state == "pending" %>
  <%= render 'games/pending_player' %>
<% elsif @game.state == "ended" %>
  <%= render 'games/ended' %>
<% elsif @game.state == "validation" %>
  <%= render 'games/validation_player' %>
<% elsif @game.state == "waiting_for_next_song" %>
  <%= render 'games/waiting_for_next_song_player' %>
<% elsif @game.state == "ended" %>
  <%= render 'games/ended' %>
<% end %>

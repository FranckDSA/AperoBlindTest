<div class="iphone-xs" style="background-color: white">

  <%= render 'shared/navbar_abt_user' %>
  <%= render 'shared/display_song' %>
  <div id="buzz-user"></div>

  <div id="buzzer-area">
    <div class="playing">
      <span><h1 style="color: black"><%= @game.answers.last.player.user_name %></h1></span>
      <span><h1 style="color: #858585">IS PLAYING<h1></span>
    </div>

    <div id="countdown" style="font-size: 60px; color: #030303"></div>
  </div>



  <div class="master-control-area" style="background-image: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0.0)), url('<%= cl_image_path("AperoBlindTest/player-buzzed_cngg9b", :width=> 357, :crop => :lpad) %>')">

    <div class="play">
  <!--     <button class="mdc-icon-button">
        <i id="play" class="material-icons mdc-icon-button__icon">pause</i>
      </button> -->
      <span id="resume" class="material-icons" data-game-id="<%= @game.id %>"> play_arrow </span>
      <h3>RESUME</h3>
    </div>

    <!-- <div class="middle-bar"></div> -->

    <div class="next">
  <!--   <button class="mdc-icon-button">
      <i id="nexttrack" class="material-icons mdc-icon-button__icon">fast_forward</i>
    </button> -->
    <span id="" class="material-icons" style="color: #c2c2c2;"> fast_forward </span>
    <h3 style="color: #c2c2c2;">NEXT</h3>
    </div>


    <div class="good-answer">
  <!--     <button  class="mdc-icon-button">
        <i id="answer" class="material-icons mdc-icon-button__icon">done_outline</i>
      </button> -->
      <h3 style="color: white;">VALIDATE !</h3>
      <span id="validation" class="material-icons" style="color: white;" data-player-id="<%= @game.answers.last.player.id %>" data-game-id="<%= @game.id %>" > done </span>
    </div>

    <div class="endgame">
      <span id="end" class="material-icons"> stop </span>
      <h3> STOP !</h3>
    </div>
</div>















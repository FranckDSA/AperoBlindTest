<div class="iphone-xs" style="background-color: white">

  <%= render 'shared/navbar_abt' %>

  <% @sorted = @game.players.sort_by { |obj| obj.score}.reverse %>
  <% @top5 = @game.players.sort_by { |obj| obj.score}.reverse.first(5) %>

<div id="display-song-player">
  <div id="waiting-for-next-song" data-player-id="<%= @game.answers.last.player.id %>" data-game-id="<%= @game.id %>"></div>

    <h1>üëèüëè WELL DONE <%= @game.answers.last.player.user_name %>!</h1>


     <h2>Top 5</h2>
    <div class="cartouche">
      <div>
          <% @top5.each_with_index do |player, index| %>
            <div class="cartouche-song">
              <h3><%= index + 1 %>. <%= player.user_name %>:</h3><p><%= player.score %> POINTS </p>
            </div>
          <% end %>
      </div>
    </div>


    <h4> READY FOR NEXT SONG...</h4>
  </div>
    <div class="display-gif-timer">
      <div id="timer-next-song"></div>
    </div>
</div>

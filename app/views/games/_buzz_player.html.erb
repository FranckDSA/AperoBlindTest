  <div id="modal-scores" class="hidden">
    <div class="container">
      <span class="close">&times;</span>
      <div class="score-recap">
        <h3 style="text-align: center"><strong>üèÜ SCORE RECAP üèÜ<strong></h3>
        <h4>
          <% @sorted = @game.players.sort_by { |obj| obj.score}.reverse %>
          <% @sorted.each do |player| %>
          <li><%= player.user_name %> : <%= player.score %></li>
          <% end %>
        </h4>
      </div>
    </div>
  </div>

</div>
